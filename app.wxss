}

.f9 {
  font-size: 28rpx;
  color: #9c9c9c;
}

.s3 {
  font-size: 26rpx;
  color: #3c3c3c;
}

.s6 {
  font-size: 26rpx;
  color: #6f6f6f;
}

.s9 {
  font-size: 26rpx;
  color: #9c9c9c;
}

.h_fix {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

.bn {
  border: 0 !important;
}

.nue {
  /*单行文本溢出省略*/
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
}

.nues {
  /*多行文本溢出省略*/
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/*搜索框*/

.h_search {
  width: 85%;
  height: 80rpx;
  line-height: 80rpx;
  border: 2rpx solid #e5e5e5;
  background: #fff;
  margin: 30rpx auto;
  border-radius: 8rpx;
  position: relative;
}

.h_vie1 {
  float: left;
  width: 90rpx;
  border-right: 1px solid #d2d2d2;
  height: 40px;
  text-align: center;
  position: relative;
}

.h_vie1 image {
  position: relative;
  display: block;
  margin: 0 auto;
  top: 20rpx;
  width: 36rpx;
  height: 38rpx;
}

.h_vie2 {
  float: left;
  width: 70%;
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 15rpx;
  margin-left: 3%;
}

.h_inp1 {
  font-size: 30rpx;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  color: #9c9c9c;
}

.h_vie2 image {
  position: absolute;
  right: 18rpx;
  top: 18rpx;
  width: 44rpx;
  height: 44rpx;
}
