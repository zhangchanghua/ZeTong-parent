page {
  font-family: '微软雅黑';
  background: #f5f5f5;
}

.base {
  width: 100%;
  position: relative;
  overflow: hidden;
  margin: 0 auto;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

.juz {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  overflow: hidden;
}

.col {
  /*上到下*/
  display: flex;
  flex-direction: column;
}

.row {
  /*左到右*/
  display: flex;
  flex-direction: row;
}

.btw {
  /*一个左一个右*/
  display: flex;
  justify-content: space-between;
}

.vercen {
  /*垂直居中*/
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.bgg {
  background: #7eb229;
}

.cg {
  color: #7eb229;
  border-bottom: 4rpx solid #7eb229;
}

.headsi {
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;
  margin: 20rpx auto;
}

/*颜色跟大小*/

.c3 {
  font-size: 30rpx;
  color: #3c3c3c;
}

.c6 {
  font-size: 30rpx;
  color: #6f6f6f;
}

.c9 {
  font-size: 30rpx;
  color: #9c9c9c;
}

.f3 {
  font-size: 28rpx;
