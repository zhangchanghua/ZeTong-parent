
.searchLetter{
    position: fixed;
    right: 0;
    width: 40px;
   font-size: 28rpx;
    text-align: center;
    justify-content: center;
    display: flex;
    flex-direction: column;
    color: #666;
    z-index: 1;
   
   
}
.searchLetter view{
    height: 30rpx;
}
.touchClass{
   
    color: #3C3C3C;
}
.showSlectedLetter{
   
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    top:50%;
    left: 50%;
    margin: -50px;
    width: 100px;
    height: 100px;
    border-radius:10px; 
    font-size: 26rpx;
    z-index: 1
}
.selection{
    display: flex;
    width: 100%;
    flex-direction: column;
}
.item_letter{
    display: block;
    height: 40px;
    line-height: 40px;
    padding-left: 10px;
    align-items: center;
    font-size: 28rpx;
    color:#7eb229;
    
}
.item_city{
    display: flex;
    background-color: #fff;
    height: 40px;
    font-size: 30rpx;
    color:#3C3C3C;
    padding-left: 10px;
    align-items: center;
    border-bottom: 1px solid #e5e5e5;
}


