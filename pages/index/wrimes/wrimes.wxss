.h_com{
    width:90%;
    padding:0 5%;
    height:90rpx;
    line-height: 90rpx;
    background: #fff;
    position: relative;
    border-bottom: 2rpx solid #e5e5e5;
}

.h_com label{
    display:inline-block;
    /*width:25%;*/
    height:50rpx;
    line-height: 50rpx;
    color:#6f6f6f;
    margin-top: 20rpx;
    font-size: 28rpx;
    /*text-align: right;*/
}
.h_com input{
    position: relative;
    font-family: '微软雅黑';
    float:right;
    width:72%;
    height:50rpx;
    line-height: 50rpx;
    border:0;
    top: 20rpx;
    color:#3c3c3c;
    font-size: 28rpx;
}
.h_btn{
    width: 94%;
    margin-top: 40rpx;
    background: #7eb229!important;
}
.pick{
  position: absolute;
  width:80%;
  right:0;
  top:0;
  line-height: 90rpx;
  height:90rpx;
  color:#3c3c3c;
    font-size: 28rpx;
}